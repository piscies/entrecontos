@model Piscies.EntreContos.Crosscut.ViewModel.ClassificationViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.ChallengeTheme</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Posição</th>
            <th scope="col">Título</th>
            <th scope="col">Autor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classification in Model.Classifications)
        {
        <tr>
            <td>@classification.Position</td>
            <td>@classification.ShortStory.Title</td>
            <td>@classification.ShortStory.Author.Name</td>
        </tr>
        }
    </tbody>
</table>

